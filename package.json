{
  "name": "poc-hexa-poo",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@3.2.3",
  "workspaces": {
    "packages": [
      "core",
      "client"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom"
    ]
  },
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "install": "yarn workspaces foreach run install",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock"
  }
}
